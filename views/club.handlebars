<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>{{club.name}}</title>
</head>
<body>
    <div class="container mt-5">
        <h1>{{club.name}}</h1>
        <p>{{club.description}}</p>
        {{#unless isMember}}
            <button id="joinClubBtn" class="btn btn-success" data-club-id="{{club.id}}">Join Club</button>
        {{else}}
            <p>You are a member of this club.</p>
        {{/unless}}
        <h3>Hosted by: {{club.hostDetails.name}}</h3>
    </div>  
     </div>
    <div class="container mt-5">
        {{!-- 
        find club ID
        search Libraries DB for most recent book matching that id
        pull mathcing book id from book db
         --}}
        <h1>Current book:</h1>
        <h2>Discussion on:</h2>
    </div>
    <div class="container mt-5">
         {{!-- 
        find club ID
        search Libraries DB for all books matching club ID
        pull matching book ids from book db
         --}}
        <h1>Library:{{clubBooks.id}}</h1>
    </div>
    <div class="container mt-5">
        <h2>Members:</h2>
        <ul>
            {{#each clubMembers}}
                <li>{{this.name}} ({{this.email}})</li>
            {{/each}}
        </ul>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const joinButton = document.getElementById('joinClubBtn');


            joinButton.addEventListener('click', function () {
                const clubId = this.getAttribute('data-club-id');

                fetch(`/api/clubs/join/${clubId}`, { method: 'POST' })
                .then(response => {
                    if (!response.ok) throw new Error('Failed to join club');
                    return response.json();
                })
                .then(data => {
                    alert(data.message);  // Show success message
                })
                .catch(error => {
                    console.error('Error joining club:', error);
                    alert('Error joining club: ' + error.message);
                });
            });
        });
    </script>
    
</body>
</html>